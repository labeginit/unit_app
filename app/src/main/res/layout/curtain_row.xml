<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="110dp"
    android:paddingTop="20dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/curtain_row_background">

        <ImageView
            android:id="@+id/curtainRowImage"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.6"
            app:srcCompat="@drawable/curtains_icon"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/curtainRowName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Curtain name"
            android:textColor="#1B1A1A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/curtainRowButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:backgroundTint="#EAEAEA"
            android:radius="20dp"
            android:shadowColor="#201F1F"
            android:text="CLOSED"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>