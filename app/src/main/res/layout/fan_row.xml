<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="110dp"
    android:paddingTop="20dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/fan_row_background">

        <ImageView
            android:id="@+id/fanRowImage"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="0.7"
            app:srcCompat="@drawable/fan_icon_v2"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/fanRowName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="Fan name"
            android:textColor="#1B1A1A"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/fanSpeedSlider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            app:thumbColor="#2196F3"
            app:trackColor="#A6A5A5"
            app:tickColor="@color/black"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="3"
            android:stepSize="1"
            android:layout_gravity="center"
            />


    </LinearLayout>

</RelativeLayout>